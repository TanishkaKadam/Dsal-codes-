#include<bits/stdc++.h>
#define max 20
using namespace std;
struct empl{
    string name;
    string code;
};
int num;
empl emp[max];
void build(){
    cout<<"BUILD TABLE"<<endl;
    cout<<"MAXIMUM ENTRIES : "<<max<<endl;
    cout<<"NUMBER OF ENTRIES : "<<endl;
    cin>>num;
    if(num>max){
        cout<<"MAX ENTRIES ARE 20";
        num=20;
    }
    cout<<"ENTER DATA\n";
    for(int i=0;i<num;i++)
    {
        cout<<"NAME: "<<endl;
        cin>>emp[i].name;
        cout<<"ID: "<<endl;
        cin>>emp[i].code;
    }
    
}
void insert(){
    if(num<max)
    {
        int i=num;
        num++;
        cout<<"ENTER DATA\n";
        cout<<"NAME: \n"<<endl;
        cin>>emp[i].name;
        cout<<"ID: \n"<<endl;
        cin>>emp[i].code;
        
    }else{
        cout<<"FULL\n";
    }
    
}
void delind(int i){
    for(int j=i;j<num-1;j++){
        emp[j].name=emp[j+1].name;
        emp[j].code=emp[j+1].code;
    }
    
}
void delrec(){
    cout<<"ENTER ID: \n";
    string code;
    cin>>code;
    for(int i=0;i<num;i++)
        if(code == emp[i].code){
            delind(i);
            num--;
            break;
        }}
void search(){
    cout<<"ENTER ID: \n";
    string code;
    cin>>code;
    bool b=false;
    for(int i=0;i<num;i++){
        if(emp[i].code==code){
            cout<<"NAME"<<emp[i].name<<endl;
            cout<<"ID"<<emp[i].code<<endl;
            b=true;
            break;
        }}
    if(b==false){
        cout<<"NOT FOUND\n";
    }
    
}
int main(){
    int n;
    while(1){
        cout<<"1.BUILD TABLE 2.INSERT 3.DELETE 4.SEARCH 5.EXIT\n";
        cin>>n;
        switch(n){
            case 1:
                build();
                break;
            case 2:
                insert();
                break;
            
            case 3:
                delrec();
                break;
            case 4:
                search();
                break;
            default:
                exit(0);
                
                
                
                
        }
        
    }
    
}
